name: Build Docker images

on:
  push:
    branches:
      - Ubuntu24

jobs:
  docker:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        architecture: [amd64, arm64] # Define your target architectures
 
    steps:
      -
        name: Checkout this repo
        uses: actions/checkout@v4

      -
        name: Set Docker tag
        id: set_tag
        run: |
          BRANCH_NAME=$(echo "${{ github.ref }}" | sed -e "s/refs\/heads\///g" | sed -e "s/[^a-zA-Z0-9._-]/-/g" | tr '[:upper:]' '[:lower:]')
          if [[ "${{ github.ref }}" == "refs/heads/main" ]]; then
            echo "TAG=latest" >> $GITHUB_OUTPUT
          elif [[ "${{ github.ref }}" == "refs/heads/develop" ]]; then
            echo "TAG=develop" >> $GITHUB_OUTPUT
          else
            echo "TAG=${BRANCH_NAME}" >> $GITHUB_OUTPUT
           fi
      -
        name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}
      -
        name: Set up QEMU for multiarch build
        uses: docker/setup-qemu-action@v3
      -
        name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      -
        name: Build and push the images to Docker Hub
        uses: docker/build-push-action@v6
        with:
          context: "{{defaultContext}}:Docker"
          push: true
          tags: the9cat/exp:${{ matrix.architecture }} # Tag with specific architecture
          platforms: linux/${{ matrix.architecture }} # Specify the target platform
