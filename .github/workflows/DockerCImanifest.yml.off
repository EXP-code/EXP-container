name: Create Multi-Arch Manifest

on:
  workflow_run:
    workflows: ["Build Docker images on native runners"] # Trigger after build
    types:
      - completed
    branches:
      - Ubuntu24

jobs:
  create-manifest:
    runs-on: ubuntu-latest
    steps:
      - name: Log in to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Create and Push Multi-Arch Manifest
        run: |
          docker manifest create exp:24 \
          exp:24-amd64 \
          exp:24-arm64
          docker manifest push exp:24
